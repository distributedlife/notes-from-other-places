= partial "/templates/anchor", :locals => {:sub => album, :suburl => album_url(album)}

.wide-container
  %section.page
    %article
      .portrait-photo
        %header
          %h1= title.titleize
        - if post.image.kind_of?(Array)
          - post.image.each_with_index do |image, index|
            %p.is-centered
              = partial "/templates/image_only", :locals => {:image => post.image}
        - else
          %p.is-centered
            = partial "/templates/image_only", :locals => {:image => post.image}
        = partial "/templates/meta", :locals => {:image => post.image, :date => get_date_taken(post.image), :album => album}

= partial "/templates/footer"
= partial "/templates/navigation", :locals => {:posts => posts, :post => post, :album => album}
#bottom-pages
  = partial "/templates/navigation", :locals => {:posts => posts, :post => post, :album => album}

%script{:src => "/travel/javascripts/image-zoom.js"}
%script{:src => "/travel/javascripts/keyboard-navigation.js"}