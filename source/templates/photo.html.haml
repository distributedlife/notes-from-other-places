= partial "/templates/anchor", :locals => {:sub => album.name, :suburl => album.url}

.wide-container
  %section.page
    %article
      .portrait-photo
        %header
          %h1= title.titleize
        - if post.type == "photos"
          - post.image.each_with_index do |image, index|
            %p.is-centered
              = partial "/templates/image_only", :locals => {:thumb => post.thumbs[index], :large => post.large_images[index], :retina => post.retina_images[index]}
        - else
          %p.is-centered
            = partial "/templates/image_only", :locals => {:thumb => post.thumb, :large => post.large, :retina => post.retina}
        = partial "/templates/meta", :locals => {:image => post.image, :date => post.date, :album => album}

= partial "/templates/footer"
= partial "/templates/navigation", :locals => {:posts => posts, :post => post, :album => album}
#bottom-pages
  = partial "/templates/navigation", :locals => {:posts => posts, :post => post, :album => album}

%script{:src => "/travel/javascripts/image-zoom.js"}
%script{:src => "/travel/javascripts/keyboard-navigation.js"}