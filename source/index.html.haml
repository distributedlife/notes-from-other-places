---
title: latest
---
- latest = get_latest_from data.albums

= partial "/templates/anchor"

.index
  %section.page
    %article
      - if latest.type == "article"
      
      - else
        %h1= link_to latest.title, "#{post_url(latest.album, latest.title)}"
        .index-article
          = partial "/templates/image", :locals => {:thumb => latest.thumb, :large => latest.large, :retina => latest.retina, :date => latest.date, :album => latest.album}
  %article
    .more-from
      %p.leader
        elsewhere
        - data.albums.each do |album|
          - next if album.name == latest.album
          .thumb
            %a{:href => "#{album_url(album.name)}"}
              = partial "/templates/photo", :locals => {:thumb => album.thumb, :large => album.large, :retina => album.retina}
              %p.cover-title= album.name
= partial "/templates/footer"